<% provide(:title, @competence.titre) %> modification 
<div class="side-nav aside">
    <section>

      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url(:small) %>
        <br/>
        <%= link_to @user.avatar.url, @user.avatar.url%>
      <%end%>

      <h1>
        <%= @user.nom %>
        <%= @user.prenom %>
      </h1>


    </section>
    <div class="row">
      <div class="large-9 small-6 columns">
      <p>edite moi</p>
      <%= form_for [@user,@competence] do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.label :titre %>
          <%= f.text_field :titre %>
          <%= f.label :descriptif %>
          <%= f.text_area :descriptif,placeholder: "Décrivez ccette compétence dans le contexte que vous souhaitez" %>
          <%= f.label :experience %>
          <%= f.text_area :experience,placeholder: "Décrivez votre expérience dans cette compétence dans le contexte que vous souhaitez" %>

        <%= radio_button_tag(:diplome, "Je dispose d'un diplome certifiant cette compétence") %>
       <%= label_tag(:age_child, "Je dispose d'un diplome certifiant cette compétence") %> 
        <%= radio_button_tag(:diplome, "je n'ai pas de diplome pour cette compétences") %>
        <%= label_tag(:age_adult, "je n'ai pas de diplome pour cette compétences") %>

        
        </div>
        <%= f.submit "Sauvegarder cette compétences", class: "button [radius round]" %>
      <% end %>
      </div>
  </div>
</div>