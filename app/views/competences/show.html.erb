<% provide(:title, @user.nom) %>
<div class="side-nav aside">
    <section>

      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url(:small) %>
        <br/>
        <%= link_to @user.avatar.url, @user.avatar.url%>
      <%end%>

      <h1>
        <%= @user.nom %>
        <%= @user.prenom %>
      </h1>


    </section>
    <div class="large-9 small-6 columns competence-user">
    <h3><%= @competence.titre %></h3>
   
    <%= link_to "modifier", edit_user_competence_path(@user.id,@competence.id), class: "button [radius round] user-button" %>
    <dl class="accordion" data-accordion>
      <dd>
        <a href="#panel1-<%= @competence.id %>">Description</a>
        <div id="panel1-<%= @competence.id %>" class="content">
          <%= @competence.descriptif %>
          <div id="edit-competence">
              icon avec action route éditer 
          </div>
        </div>
      </dd>
      <dd>
        <a href="#panel2-<%= @competence.id %>">Experience</a>
        <div id="panel2-<%= @competence.id %>" class="content">
          <%= @competence.experience %>
        </div>
      </dd>
      <dd>
        <a href="#panel3-<%= @competence.id %>">Disponibilité</a>
        <div id="panel3-<%= @competence.id %>" class="content">
          <p>Disponibilité pour cette compétence du <strong><%= @competence.dispo_debut.strftime("%d/%m/%Y") %></strong> au <strong><%= @competence.dispo_fin.strftime("%d/%m/%Y") %></strong></p>
          <%= link_to "modifier", change_dispo_path(@user.id,@competence.id), class: "button [radius round] user-button" %>
        </div>
      </dd>
    </dl>
  </div>
</div>