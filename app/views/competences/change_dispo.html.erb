<% provide(:title, @user.nom) %>
<div class="side-nav aside">
    <section>

      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url(:small) %>
        <br/>
        <%= link_to @user.avatar.url, @user.avatar.url%>
      <%end%>

      <h1>
        <%= @user.nom %>
        <%= @user.prenom %>
      </h1>


    </section>
    <h1>Entrer une nouvelle compétences</h1>
<div class="row">
  <div class="large-9 small-6 columns">
 <%= form_for [@user,@competence] do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="datepicker">
      <%= f.label :dispo_debut %>
      <%= f.datetime_select :dispo_debut %>
      <%= f.label :dispo_fin %>
      <%= f.datetime_select :dispo_fin %>
    </div>


    <%= f.submit "Sauvegarder vos disponibilités", class: "button [radius round]" %>
  <% end %>
  </div>
</div>
  </div>
</div>