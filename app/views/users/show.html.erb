<% provide(:title, @user.nom) %>
<div class="side-nav aside">
    <section>
        <div class="large-9 small-6 columns users">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar.url(:small) %>
            <br/>
            <%= link_to @user.avatar.url, @user.avatar.url%>
          <%end%>
          
          <h1>
            <%= @user.nom %>
            <%= @user.prenom %>
            <%= link_to "modifier", edit_user_path(current_user), class: "button [radius round] user-button" %>
          </h1>
          
      </div>


    </section>
    <div class="large-9 small-6 columns">
    <% if @user.competences.any? %>
      <h3><%= @user.competences.count %> Compétence(s) enregistrées</h3>
      <ul class="competences users">
        <%= render @user.competences %>
      </ul>
     
    <% end %>
  </div>
</div>